#!/usr/bin/env bash

# To stop if any command fails.
set -e

# To stop on unset variables.
set -u

# To be in project root.
cd "${0%/*}/.."

# To build app first.
source bin/build

# To start development server.
tsc -w -p src/_main --outFile "dist/static/$VERSION/ts.js" &
elm-live src/Main.elm --open --dir dist -- --output dist/static/"$VERSION"/elm.js
